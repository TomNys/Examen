<head>
  <title>Medelingen</title>
</head>

<body>
<div class="mededelingen">
  <div class="col-xs-3 col-s-3 col-l-6 col-xl-6">
        <h3>Mededelingen</h3>
        <table class="table table-striped table-condensed table-responsive ">
            <% @comment.order(:created_at).each do |comment| %>
              <tr>
                <td><%= comment.comment%></td>
                <td><%= (comment.updated_at.strftime("%d-%m-%Y %H:%M")) %></td>
                <td><%= button_to "delete", comment, :method=>:delete, :class=>:destroy %></td>
              </tr>
            <% end %>

        </table>

    <%= button_to "New Comment", new_comment_path %>

  </div>
</div>